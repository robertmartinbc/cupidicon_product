<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to (assignment.title), [assignment] %>
    </h4>
    <small>
      <%= image_tag(assignment.user.avatar.tiny.url) if assignment.user.avatar? %>
      submitted <%= time_ago_in_words(assignment.created_at) %> ago by 
      <%= link_to assignment.user.name, assignment.user %><br/>
      <%= assignment.comments.count %> Comments
    </small>
  </div>
</div>
